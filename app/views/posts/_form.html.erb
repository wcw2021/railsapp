
<% if @post.errors.any? %>
	<% @post.errors.full_messages.each do |msg| %>
		<div class="alert alert-danger"><%= msg %></div>
	<% end %>
<% end %>

<%= form_for @post do |f| %>
    <div class="form-group">
        <%= f.label:title %>
        <%= f.text_field(:title, {:class => 'form-control'} ) %>
    </div>
    <div class="form-group">
		<%= f.label:body %>
		<%= f.text_area(:body, {:class => 'form-control'}) %>
	</div>
	<p>
	  <%= f.submit({:class => 'btn btn-info'}) %>
	</p>
<% end%>



