<div class="mt-5">
    <h3>Add Comment</h3>
    <%= form_for ([@post, @post.comments.build]) do |f| %>
        <div class="form-group">
            <%= f.label:username %>
            <%= f.text_field(:username, {:class => 'form-control'}) %>
        </div>
        <div class="form-group">
            <%= f.label:body %>
            <%= f.text_area(:body, {:class => 'form-control'}) %>
        </div>
        <p>
            <%= f.submit({:class => 'btn btn-info'}) %>
        </p>
    <% end %>
</div>



